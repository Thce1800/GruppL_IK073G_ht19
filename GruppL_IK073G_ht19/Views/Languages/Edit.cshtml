@model GruppL_IK073G_ht19.Models.Languages

@{
    ViewBag.Title = "Edit";
}

<h2>Uppdatera</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Språkförmågor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Language_id)

        <div class="form-group">
            <label class="control-label col-md-2">Språk</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Language, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Gradering</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uppdatera" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <a href="/Languages/Index/1"><button class="logout">Tillbaka</button></a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
