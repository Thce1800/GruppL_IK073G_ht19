        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Lärosäte</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.Educational_institution, new { htmlAttributes = new { @class = "form-control" } })
