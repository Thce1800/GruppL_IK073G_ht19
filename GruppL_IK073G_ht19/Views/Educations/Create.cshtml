        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Program</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Educational_program, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Educational_program, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Diplom</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Diploma, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Diploma, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Stoppdatum</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.End_date, new { htmlAttributes = new { @class = "form-control" } })
