@model GruppL_IK073G_ht19.Models.Persons

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayNameFor(model => model.FirstName) @Html.DisplayNameFor(model => model.LastName)</h2>

<div>

    <hr />
    <dl class="dl-horizontal" id="pdf">
        <dt>
            Förnamn:
            @*@Html.DisplayNameFor(model => model.FirstName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Efternamn:
            @*@Html.DisplayNameFor(model => model.LastName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Adress:
            @*@Html.DisplayNameFor(model => model.Adress)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adress)
        </dd>

        <dt>
            Telefonnummer:
            @*@Html.DisplayNameFor(model => model.Phonenumber)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phonenumber)
        </dd>

        <dt>
            E-post:
            @*@Html.DisplayNameFor(model => model.Email)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Födelsedata:
            @*@Html.DisplayNameFor(model => model.Birthdate)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Birthdate)
        </dd>

        <dt>
            Nationalitet:
            @*@Html.DisplayNameFor(model => model.Nationality)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nationality)
        </dd>

        <dt>
            Körkort:
            @*@Html.DisplayNameFor(model => model.Driver_license)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Driver_license)
        </dd>

        <dt>
            Profiltext:
            @*@Html.DisplayNameFor(model => model.Profile_text)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profile_text)
        </dd>

    </dl>
</div>

@using (Html.BeginForm("Export", "Persons", FormMethod.Post))
{
    <input type="hidden" name="pdfHtml" />
    <input type="submit" id="btnSubmit" value="Exportera till PDF" />
}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnSubmit").click(function () {
            $("input[name='pdfHtml']").val($("#pdf").html());
          
        });
    });
</script>
<p>
    @Html.ActionLink("Redigera", "Edit", new { id = Model.Person_id }) |
    @Html.ActionLink("Tillbaka", "Index")
</p>
