@model GruppL_IK073G_ht19.ViewModels.PersonViewModels
@*@model GruppL_IK073G_ht19.Models.Persons*@

@* Här är det något som ska ändras... Sen borde det kanske gå *@

@{
    ViewBag.Title = "Details";

    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
}
    <div class="jumbotron">
        <h2 class="aLink">@Html.DisplayFor(model => model.Persons.FirstName) @Html.DisplayFor(model => model.Persons.LastName)</h2>
        <hr />
        <div>

            <dl class="dl-horizontal" id="pdf">
                <dt>
                    Förnamn:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.FirstName)
                </dd>

                <dt>
                    Efternamn:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.LastName)
                </dd>

                <dt>
                    Adress:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.Adress)
                </dd>

                <dt>
                    Telefonnummer:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.Phonenumber)
                </dd>

                <dt>
                    E-post:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.Email)
                </dd>

                <dt>
                    Födelsedata:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.Birthdate)
                </dd>

                <dt>
                    Nationalitet:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.Nationality)
                </dd>

                <dt>
                    Körkort:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persons.Driver_license)
                </dd>

                <dt>
                    Profiltext:
                </dt>

                <dd>
                    <textarea>
            @Html.DisplayFor(model => model.Persons.Profile_text)

            </textarea>
                </dd>

                <dt>
                    Arbete:
                </dt>
                <dd>
                    <table>
                        @foreach (var item in Model.Employments)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employment_id)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Assignments)

                                </td>
                            </tr>
                        }

                    </table>
                </dd>

            </dl>
        </div>
    </div>

<div>
    <br />
    <a href="https://www.linkedin.com">
        <img alt="Linkedin" src="~/Content/linkedin.png" width="30" height="30">
    </a>
    <a href="https://www.github.com">
        <img border="0" alt="Github" src="~/Content/github-logo.png" width="30" height="30">
    </a>
</div>


@using (Html.BeginForm("Export", "Persons", FormMethod.Post))
{
    <input type="hidden" name="pdfHtml" />
    <input type="submit" class="buttonPdf" id="btnSubmit" value="Exportera till PDF" />
}



<p>
    @Html.ActionLink("Redigera", "Edit", new { id = Model.Persons.Person_id }) |
    @Html.ActionLink("Tillbaka", "Index")
</p>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnSubmit").click(function () {
            $("input[name='pdfHtml']").val($("#pdf").html());

        });
    });
</script>

