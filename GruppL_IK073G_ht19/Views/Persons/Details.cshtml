@model GruppL_IK073G_ht19.Models.Persons

@{
    ViewBag.Title = "Details";
   
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
}

<h2 class="aLink">@Html.DisplayNameFor(model => model.FirstName) @Html.DisplayNameFor(model => model.LastName)</h2>

<div>

    <hr />
    <dl class="dl-horizontal" id="pdf">
        <dt>
            Förnamn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Efternamn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Adress:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adress)
        </dd>

        <dt>
            Telefonnummer:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phonenumber)
        </dd>

        <dt>
            E-post:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Födelsedata:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Birthdate)
        </dd>

        <dt>
            Nationalitet:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nationality)
        </dd>

        <dt>
            Körkort:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Driver_license)
        </dd>

        <dt>
            Profiltext:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profile_text)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Redigera", "Edit", new { id = Model.Person_id }) |
    @Html.ActionLink("Tillbaka", "Index")
</p>

@using (Html.BeginForm("Export", "Persons", FormMethod.Post))
{
    <input type="hidden" name="pdfHtml" />
    <input type="submit" class="buttonPdf" id="btnSubmit" value="Exportera till PDF" />
}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnSubmit").click(function () {
            $("input[name='pdfHtml']").val($("#pdf").html());

        });
    });
</script>

